{% extends "layout.njk" %}

{% block content %}

    <section class="card">
        <section class="avatar" id="{{ members.id }}" style=" background: url({{ members.avatar_url }}) no-repeat center center /cover; "></section>
        <section class="details">
            <h3 class="item_details-title">Detalhes</h3>
            
            <div class="item">
                <div>Nome do Instrutor</div>
                <div>{{ members.name }}</div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>{{ members.email }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ members.age }}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if members.sex == 'M' else 'Feminino' }}</div>
            </div>
            <div class="item">
                <div>Tipo sangu√≠neo</div>
                <div>{{ members.blood }}</div>
            </div>
            <div class="item">
                <div>Peso(kg)</div>
                <div>
                    {{ members.weight }}
                </div>
            </div>
            <div class="item">
                <div>Altura(cm)</div>
                <div>
                    {{ members.height }}
                </div>
            </div>
            <div class="item">
                <div>Aluno de </div>
                <div>{{ members.instructors_name }}</div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ members.create_at }}</div>
            </div>

            <div class="w-100">
                <a class="button" href="/members/{{ members.id }}/edit">Editar</a>
            </div>

        </section>
    </section>
    

{% endblock content %}