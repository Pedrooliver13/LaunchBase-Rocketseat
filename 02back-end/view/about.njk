{% extends "layout.njk" %}}  

{% block head %}
    <title>Sobre - Pedro Oliveira</title>

{% endblock %}

{% block content %}

    <div id="wrapper">
        <img src="{{ about.url }}" alt="{{ about.name }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p class="links">{{ about.description }}</p>
    </div>

    <div class="links sub_menu">

        {% for links in about.links %}
            <a href="{{ links.url }}" target="_blank">{{ links.name }}</a>
        {% endfor %}

    </div>

{% endblock %}
    