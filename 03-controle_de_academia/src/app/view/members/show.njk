{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="widht:100%; background: url({{ instructor.avata_url }}) no-repeat center center / cover;">
        </section>
        <section class="details">
            <div>
                <h3 class="item_details-title">Detalhes</h3>
            </div>
            <div class="item">
                <div>Instrutors</div>
                <div>{{ instructor.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ instructor.age }}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <div>{{ 'Masculino' if instructor.sex == "M" else 'Feminino' }}</div>
            </div>
            <div class="item">
                <div>Servi√ßos</div>
                <div>
                    {% for services in instructor.services %}
                        <span>{{ services }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ instructor.create_at }}</div>
            </div>

            <a class="button" href="/instructors/{{ instructor.id }}/edit">Editar</a>

        </section>
    </div>
    <div class="links">
        <a href="instructors/create">Cadastrar-se</a>
    </div>
{% endblock content %}