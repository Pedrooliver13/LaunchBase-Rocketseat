{% extends "layout.njk" %}

{% block content %}
    <section class="card">
            <section class="avatar" style="max-width:100%; background: url({{ members.avatar_url }}) no-repeat center center / cover; "></section>
            
            <section class="details">
                <h3 class="item_details-title">Editar Membro</h3>

                <form method="POST" action="/members?_method=PUT">

                    {% include "members/field.njk" %}
            
                    <input type="hidden" name="id" value="{{ members.id }}">
                </form>
    
                <form id="form-delete" action="/members?_method=DELETE" method="POST">
                    <input type="hidden" name="id" value="{{ members.id }}">

                    <button class="button w-100" type="submit">Deletar</button>
                </form>
            </section>
            
    </section>

    
{% endblock content %}